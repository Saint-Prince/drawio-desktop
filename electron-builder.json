{
  "appId": "com.jgraph.drawio.desktop",
  "copyright": "Copyright 2017-2018 draw.io",
  "asar": true,
  "files": [
    "**/*",
    "!**/WEB-INF{,/**}"
  ],
  "artifactName": "${productName}-${arch}-${version}.${ext}",
  "directories": {
    "app": "./drawio/src/main/webapp",
    "output": "./dist/"
  },
  "npmRebuild": false,
  "publish": [
    {
      "provider": "github"
    }
  ],
  "win": {
    "target": [
      "nsis"
    ]
  },
  "nsis": {
    "perMachine": true
  },
  "mac": {
    "category": "public.app-category.graphics-design",
    "target": [
      "zip",
      "dmg"
    ]
  },
  "dmg": {},
  "linux": {
    "category": "Graphics",
    "maintainer": "JGraph <support@draw.io>",
    "target": [
      "AppImage",
      "deb",
      "rpm"
    ]
  }
}
